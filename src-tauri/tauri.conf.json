{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Stellar",
  "version": "0.0.1",
  "identifier": "com.stellar.stellar",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Stellar",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": [],
    "copyright": "Copyright Â© 2024 Stellar",
    "category": "Education",
    "shortDescription": "AI-powered study companion",
    "longDescription": "Your AI-powered study companion for focused learning and knowledge management. Process PDFs, create flashcards, and enhance your learning experience with advanced AI integration.",
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "digestAlgorithm": "sha256"
    }
  }
}
